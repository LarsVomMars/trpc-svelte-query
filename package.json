{
	"name": "trpc-svelte-query",
	"version": "3.0.3",
	"description": "Use tRPC with SvelteKit and Tanstack Query (full SSR support)",
	"author": "Ottomated",
	"license": "MIT",
	"type": "module",
	"module": "dist/index.svelte.js",
	"typesVersions": {
		"*": {
			"*": [
				"dist/index.svelte.d.ts"
			],
			"server": [
				"dist/server/index.d.ts"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ottomated/trpc-svelte-query.git"
	},
	"scripts": {
		"prepublish": "pnpm build",
		"build": "rm -rf dist && tsup",
		"lint": "eslint --fix --ext \".js,.ts\" --report-unused-disable-directives src",
		"dev": "tsup --watch"
	},
	"exports": {
		".": "./dist/index.svelte.js",
		"./server": "./dist/server/index.js"
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"peerDependencies": {
		"@sveltejs/kit": ">=2.20.0 <3",
		"@tanstack/svelte-query": "^6.0.3",
		"@trpc/client": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"svelte": ">=5 <6"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.48.4",
		"@tanstack/svelte-query": "^6.0.3",
		"@trivago/prettier-plugin-sort-imports": "^5.2.2",
		"@trpc/client": "^11.7.1",
		"@trpc/server": "^11.7.1",
		"@types/node": "^24.9.2",
		"@typescript-eslint/eslint-plugin": "^8.46.2",
		"@typescript-eslint/parser": "^8.46.2",
		"eslint": "^9.39.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-unicorn": "^62.0.0",
		"prettier": "^3.6.2",
		"tslib": "^2.6.2",
		"tsup": "^8.5.0",
		"typescript": "^5.9.3"
	},
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"trpc-svelte-query": "link:"
	}
}
