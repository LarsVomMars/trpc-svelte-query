{
	"name": "trpc-svelte-query",
	"version": "2.0.5",
	"description": "tRPC Svelte lib",
	"author": "Ottomated",
	"license": "MIT",
	"module": "dist/index.mjs",
	"typesVersions": {
		"*": {
			"*": [
				"dist/index.d.mts"
			],
			"server": [
				"dist/server/index.d.mts"
			]
		}
	},
	"homepage": "https://trpc.io",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ottomated/trpc-svelte-query.git"
	},
	"scripts": {
		"build": "rm -rf dist && tsup",
		"lint": "eslint --fix --ext \".js,.ts\" --report-unused-disable-directives src",
		"dev": "tsup --watch"
	},
	"exports": {
		".": "./dist/index.mjs",
		"./server": "./dist/server/index.mjs"
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"eslintConfig": {
		"rules": {
			"no-restricted-imports": [
				"error",
				"trpc-svelte-query"
			]
		}
	},
	"dependencies": {
		"esm-env": "^1.0.0"
	},
	"peerDependencies": {
		"@sveltejs/kit": "^1.27.5",
		"@tanstack/svelte-query": "^5.8.2",
		"@trpc/client": "^10.43.3",
		"@trpc/server": "^10.43.3",
		"svelte": ">=3 <5"
	},
	"devDependencies": {
		"@sveltejs/kit": "^1.27.5",
		"@tanstack/svelte-query": "^5.8.2",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@trpc/client": "^10.43.3",
		"@trpc/server": "^10.43.3",
		"@types/node": "^20.9.0",
		"@typescript-eslint/eslint-plugin": "^6.10.0",
		"@typescript-eslint/parser": "^6.10.0",
		"eslint": "^8.53.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-prettier": "^5.0.1",
		"eslint-plugin-unicorn": "^49.0.0",
		"prettier": "^3.0.3",
		"tslib": "^2.6.2",
		"tsup": "^7.2.0",
		"typescript": "^5.2.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
