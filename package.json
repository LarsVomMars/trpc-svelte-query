{
	"name": "trpc-svelte-query",
	"version": "3.0.1",
	"description": "Use tRPC with SvelteKit and Tanstack Query (full SSR support)",
	"author": "Ottomated",
	"license": "MIT",
	"type": "module",
	"module": "dist/index.svelte.js",
	"typesVersions": {
		"*": {
			"*": [
				"dist/index.svelte.d.ts"
			],
			"server": [
				"dist/server/index.d.ts"
			]
		}
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/ottomated/trpc-svelte-query.git"
	},
	"scripts": {
		"prepublish": "pnpm build",
		"build": "rm -rf dist && tsup",
		"lint": "eslint --fix --ext \".js,.ts\" --report-unused-disable-directives src",
		"dev": "tsup --watch"
	},
	"exports": {
		".": "./dist/index.svelte.js",
		"./server": "./dist/server/index.js"
	},
	"files": [
		"dist",
		"src",
		"README.md"
	],
	"peerDependencies": {
		"@sveltejs/kit": ">=2.20.0 <3",
		"@tanstack/svelte-query": "^5.69.0",
		"@trpc/client": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"svelte": ">=5 <6"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.20.2",
		"@tanstack/svelte-query": "^5.69.0",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@trpc/client": "^11.0.0",
		"@trpc/server": "^11.0.0",
		"@types/node": "^20.11.20",
		"@typescript-eslint/eslint-plugin": "^7.1.0",
		"@typescript-eslint/parser": "^7.1.0",
		"eslint": "^8.57.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"eslint-plugin-unicorn": "^51.0.1",
		"prettier": "^3.2.5",
		"tslib": "^2.6.2",
		"tsup": "^8.0.2",
		"typescript": "^5.8.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
